@model teste_cliente.Models.Noticia

<div class="card h-100 shadow-sm news-card">
    <div class="position-relative" style="height: 350px;">
        @if (!string.IsNullOrEmpty(Model.UrlToImage) && !Model.UrlToImage.StartsWith("/images/"))
        {
            <img src="@Model.UrlToImage" class="card-img-top news-card-image" alt="@Model.Title">
        }
        else
        {
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center news-card-image">
                <i class="fa fa-newspaper-o fa-3x text-muted"></i>
            </div>
        }

        <div class="news-card-overlay">
            <h5 class="news-card-title">@Model.Title</h5>
            <p class="news-card-description">@(Model.Description?.Length > 80 ? Model.Description.Substring(0, 80) + "..." : Model.Description)</p>
            <a href="@(Model.Url == "#" ? "javascript:void(0)" : Model.Url)"
               target="@(Model.Url == "#" ? "_self" : "_blank")"
               class="news-card-link">
                Ver mais <i class="fa fa-chevron-right ms-1"></i>
            </a>
        </div>
    </div>
</div>