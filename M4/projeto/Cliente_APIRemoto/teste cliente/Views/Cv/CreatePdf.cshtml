@model teste_cliente.Models.CV

@{
    Layout = null;
    
    string imgSrc;
    if (Model.FotoPerfil != null && Model.FotoPerfil.Length > 0)
    {
        var base64 = Convert.ToBase64String(Model.FotoPerfil);
        imgSrc = $"data:image/jpeg;base64,{base64}";
    }
    else
    {
        imgSrc = Url.Content("~/img/icone_perfil.png");
    }
    
}

<div class="container mt-4" style="font-family: Arial, sans-serif; color: #333;">
    <div class="text-center mb-4">
        <img src="@imgSrc"
             alt="Foto de perfil"
             style="width:120px; height:120px; object-fit:cover; border-radius:50%;" />

        <h1 style="margin-top: 10px; font-size: 24px;">@Model.Nome</h1>
        <p style="font-size: 14px; color: #666;">@Model.Localizacao</p>
    </div>

    <hr style="border: none; height: 1px; background-color: #ccc;" />

    <section style="margin-bottom: 20px;">
        <h2 style="font-size: 18px; margin-bottom: 8px;">Educação</h2>
        <p style="font-size: 14px; white-space: pre-wrap;">@Model.Educacao</p>
    </section>

    <section style="margin-bottom: 20px;">
        <h2 style="font-size: 18px; margin-bottom: 8px;">Experiência Profissional</h2>
        <p style="font-size: 14px; white-space: pre-wrap;">@Model.ExpProfissional</p>
    </section>

    <section style="margin-bottom: 20px;">
        <h2 style="font-size: 18px; margin-bottom: 8px;">Competências</h2>
        <p style="font-size: 14px; white-space: pre-wrap;">@Model.Competencias</p>
    </section>

    <section style="margin-bottom: 20px;">
        <h2 style="font-size: 18px; margin-bottom: 8px;">Interesses</h2>
        <p style="font-size: 14px; white-space: pre-wrap;">@Model.Interesses</p>
    </section>
</div>
