@model (string Message, string RedirectUrl)

<div class="modal-overlay" id="successModal">
    <div class="modal-content" id="modalContent">
        <h3 class="text-success">Sucesso!</h3>
        <p>@Model.Message</p>
        <button class="btn-continue" onclick="window.location.href='@Model.RedirectUrl'">Continuar</button>
    </div>
</div>

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(to bottom right, #00B8D4, #6EE5E9);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .modal-content {
        background-color: white;
        border-radius: 20px;
        padding: 2rem;
        width: 90%;
        max-width: 360px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .btn-continue {
        background-color: #F89B3D;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 0.6rem;
        width: 100%;
        font-weight: bold;
        cursor: pointer;
    }

    h3 {
        margin-bottom: 1rem;
        font-weight: 600;
    }

    p {
        margin-bottom: 1.5rem;
    }
</style>
